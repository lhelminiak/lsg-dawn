
{{ 'component-custom-hero.css' | asset_url | stylesheet_tag }}

<div class="custom-hero">
    <div>
        {% for block in section.blocks %}
            {% case block.type %}
                {% when 'heading' %}
                    {% if block.settings.hero_heading != blank %}
                        <h1>{{ block.settings.hero_heading | replace: 'p>', 'span>' }}</h1>
                    {% endif %}
                {% when 'heading_subtext' %}
                    {% if block.settings.hero_heading_subtext != blank %}
                        <h4>{{ block.settings.hero_heading_subtext | replace: 'p>', 'span>' }}</h4>
                    {% endif %}
                {% when 'heading_cta_text' %}
                    {% if block.settings.heading_cta_text != blank %}
                        <p>{{ block.settings.hero_cta_text | replace: 'p>', 'span>' }}</p>
                    {% endif %}
                {% when 'button' %}
                    {% if block.settings.button_text != blank %}
                        <a href="{{ block.settings.button_url }}">{{ block.settings.button_text }}</a>
                    {% endif %}
            {% endcase %}
        {% endfor %}


    </div>
</div>

{% schema %}

{
    "name": "Custom Hero",
    "tag": "section",
    "class": "section",
    "settings": [
        {
            "type": "image_picker",
            "id": "hero_image",
            "label": "Image for hero banner"
        }
    ],
    "blocks": [
        {
            "type": "heading",
            "name": "Hero Heading",
            "limit": 1,
            "settings": [
                {
                    "type": "richtext",
                    "id": "hero_heading",
                    "default": "<p>Type your heading</p>",
                    "label": "Heading for hero"
                }
            ]
        },
        {
            "type": "heading_subtext",
            "name": "Hero Heading Subtext",
            "limit": 1,
            "settings": [
                {
                    "type": "richtext",
                    "id": "hero_heading_subtext",
                    "default": "<p>Type your heading subtext</p>",
                    "label": "Hero heading subtext"
                }
            ]
        },
        {
            "type": "heading_cta_text",
            "name": "Hero Cta Text",
            "limit": 1,
            "settings": [
                {
                    "type": "richtext",
                    "id": "hero_cta_text",
                    "default": "<p>Type Cta text</p>",
                    "label": "Hero Cta Text"
                }
            ]
        },
        {
            "type": "button",
            "name": "button",
            "limit": 1,
            "settings": [
                {
                    "type": "text",
                    "id": "button_text",
                    "default": "Button text",
                    "label": "Text for button"
                },
                {
                    "type": "url",
                    "id": "button_url",
                    "label": "url for button link"
                },
                {
                    "type": "color",
                    "id": "button_main_color",
                    "label": "Main button color",
                    "default": "#FFFFFF"
                },
                {
                    "type": "color",
                    "id": "button_border_color",
                    "label": "Button border color",
                    "default": "#000000"
                },
                {
                    "type": "color",
                    "id": "button_text_color",
                    "label": "Button text color",
                    "default": "#000000"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Custom Hero",
            "blocks": [
                {
                    "type": "heading"
                },
                {
                    "type": "button"
                }
            ]
        }
    ]

}

{% endschema %}